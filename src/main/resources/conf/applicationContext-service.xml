<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd
">
	<!-- 自动扫描(core DAO) -->
	<context:component-scan base-package="com.gxwzu.core.dao"/>
	<!-- 自动扫描(core Service) -->
    <context:component-scan base-package=" com.gxwzu.core.service"/>
    <!-- 自动扫描(system DAO) -->
	<context:component-scan base-package="com.gxwzu.system.dao"/>
    <!-- 自动扫描(system Service) -->
    <context:component-scan base-package=" com.gxwzu.system.service"/>
    <!-- 自动扫描(business DAO) -->
	<context:component-scan base-package="com.gxwzu.business.dao"/>
    <!-- 自动扫描(business Service) -->
    <context:component-scan base-package=" com.gxwzu.business.service"/>    
    <!-- 自动扫描(App Service) -->
</beans>